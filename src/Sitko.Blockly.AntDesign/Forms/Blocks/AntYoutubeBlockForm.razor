@using FormItem = AntDesign.FormItem
@inherits YoutubeBlockForm<AntDesignBlocklyFormOptions>
<!--suppress HtmlDeprecatedAttribute -->
<FormItem Label="@LocalizationProvider["Url"]">
    <Input placeholder="@LocalizationProvider["Video url"]" @bind-Value="@Block.Url"/>
</FormItem>
@if (!string.IsNullOrEmpty(Block.YoutubeId))
{
    <div class="youtube-container-wrapper">
        <div class="youtube-container">
            @* ReSharper disable once Html.Obsolete *@
            <iframe src="@Block.Url"
                    frameborder="0" allowfullscreen class="youtube-video">
            </iframe>
        </div>
    </div>
}
