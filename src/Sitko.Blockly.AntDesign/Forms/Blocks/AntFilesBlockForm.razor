@using Sitko.Core.App.Collections
@using Sitko.Core.Storage
@typeparam TForm
@inherits Sitko.Blockly.Blazor.Forms.Blocks.FilesBlockForm<TForm>

<AntStorageFilesInput
    TCollection="ValueCollection<StorageItem>"
    Storage="Options.Storage"
    ContentTypes="@Options.FilesTypes"
    UploadPath="@Options.FilesUploadPath"
    MaxFileSize="@Options.MaxFileSize"
    MaxAllowedFiles="@Options.MaxAllowedFiles"
    GenerateMetadata="Options.GenerateMetadata"
    @bind-Value="Block.Files">
</AntStorageFilesInput>
<BlockValidationMessage FieldIdentifier="@FieldIdentifier"></BlockValidationMessage>
