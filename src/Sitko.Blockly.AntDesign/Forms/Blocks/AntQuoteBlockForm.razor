@typeparam TForm
@inherits Sitko.Blockly.Blazor.Forms.Blocks.QuoteBlockForm<TForm>

<BlockFormItem BlockForm="this">
    <CKEditor TextareaClass="ant-input" SwitchToEditorText="@LocalizationProvider["Back to editor"]" SwitchToHtmlText="@LocalizationProvider["Edit HTML"]" Placeholder="@LocalizationProvider["Quote text"]" @bind-Value="Block.Text"></CKEditor>
</BlockFormItem>
<Divider/>
<Row Gutter="24">
    <AntDesign.Col Span="8">
        <FormItem Label="@LocalizationProvider["Source"]">
            <Input Placeholder="@LocalizationProvider["Author name, site title, etc..."]" @bind-Value="@Block.Author"/>
        </FormItem>
    </AntDesign.Col>
    <AntDesign.Col Span="8">
        <FormItem Label="@LocalizationProvider["Url"]">
            <Input Placeholder="@LocalizationProvider["Link"]" @bind-Value="@Block.Link"/>
        </FormItem>
    </AntDesign.Col>
    <AntDesign.Col Span="8">
        <FormItem Label="@LocalizationProvider["Source picture"]">
            <AntStorageImageInput
                Avatar="true"
                Size="small"
                Storage="Options.Storage"
                ContentTypes="@Options.ImagesTypes"
                UploadPath="@Options.ImagesUploadPath"
                MaxFileSize="@Options.MaxImageSize"
                UploadText="@LocalizationProvider["Upload"]"
                RemoveText="@LocalizationProvider["Remove"]"
                PreviewText="@LocalizationProvider["Preview"]"
                GenerateMetadata="Options.GenerateImageMetadata"
                @bind-Value="Block.Picture">
            </AntStorageImageInput>
        </FormItem>
    </AntDesign.Col>
</Row>
