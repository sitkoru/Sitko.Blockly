@using Sitko.Core.App.Collections
@using Sitko.Core.Storage
@typeparam TForm
@inherits Sitko.Blockly.Blazor.Forms.Blocks.GalleryBlockForm<TForm>
<BlockFormItem BlockForm="this">
    <AntStorageImagesInput
        TCollection="ValueCollection<StorageItem>"
        Storage="Options.Storage"
        ContentTypes="@Options.ImagesTypes"
        UploadPath="@Options.ImagesUploadPath"
        MaxFileSize="@Options.MaxImageSize"
        MaxAllowedFiles="@Options.MaxAllowedImages"
        GenerateMetadata="Options.GenerateImageMetadata"
        UploadText="@LocalizationProvider["Upload"]"
        RemoveText="@LocalizationProvider["Remove"]"
        PreviewText="@LocalizationProvider["Preview"]"
        LeftText="@LocalizationProvider["Move left"]"
        RightText="@LocalizationProvider["Move right"]"
        @bind-Value="Block.Pictures">
    </AntStorageImagesInput>
</BlockFormItem>
